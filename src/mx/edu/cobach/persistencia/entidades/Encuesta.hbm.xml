<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="mx.edu.cobach.persistencia.entidades.Encuesta" table="encuesta" catalog="capacisoft" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <many-to-one name="implementacionCurso" class="mx.edu.cobach.persistencia.entidades.ImplementacionCurso" fetch="select">
            <column name="implementacion_curso_id" not-null="true" />
        </many-to-one>
        <set name="respuestas" table="respuesta" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="encuesta_id" not-null="true" />
            </key>
            <one-to-many class="mx.edu.cobach.persistencia.entidades.Respuesta" />
        </set>
    </class>
</hibernate-mapping>
